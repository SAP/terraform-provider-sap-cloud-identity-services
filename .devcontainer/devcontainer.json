// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/go
{
	"name": "Terraform Provider for SAP IAS",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/go:1-1.22-bullseye",
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers/features/terraform:1": {}
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "cp ./config/provider-config.txt ~/.terraformrc",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"golang.go",
				"HashiCorp.terraform",
				"ms-vscode.makefile-tools"
			]
		},
		"codespaces": {}
	},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	//  "remoteUser": "vscode",

	// This devcontainer expects a file named .devcontainer/devcontainer.env to exist.
	// you should place the following environment variables in that file:
	// - ias_username
	// - ias_password
	"runArgs": [
		"--env-file",
		".devcontainer/devcontainer.env"
	]
}
